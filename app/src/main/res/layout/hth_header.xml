<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/hth_home_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/hth_main_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TIME"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/hth_main_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:layout_toStartOf="@+id/hth_home_layout"
        android:layout_toEndOf="@id/hth_away_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_win_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="@dimen/_35sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" x "
            android:textSize="@dimen/_30sdp"/>

        <TextView
            android:id="@+id/away_win_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="@dimen/_35sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="150dp"

        android:gravity="center"
        >
        <TextView
            android:id="@+id/ties_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ties"
            android:textSize="@dimen/_20sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hth_away_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/hth_main_text2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:gravity="center"
            android:textSize="30sp"
            />

        <ImageView
            android:id="@+id/hth_main_img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            />

    </LinearLayout>


</RelativeLayout>

